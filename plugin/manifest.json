{
  "manifest_version": 3,
  "name": "AuraFlow Automation Engine",
  "version": "1.0.0",
  "description": "Browser automation companion for AuraFlow AI Workflow Designer",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "AuraFlow Connected"
  }
}